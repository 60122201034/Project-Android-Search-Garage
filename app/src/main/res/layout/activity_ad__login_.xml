<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F77043"
    tools:context=".Insert_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/admin"
            android:layout_below="@id/textView"/>

    <EditText
        android:id="@+id/textName"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/textId"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@id/textName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/butLog"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@id/textId"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/butBack"
            android:background="@drawable/unlo" />

        <Button
        android:id="@+id/butBack"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:background="@drawable/ba"
        android:layout_below="@id/textId"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="80dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Only"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>